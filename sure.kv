<EnterCode>:
    name: 'enter_code'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: 'real.png'
            pos_hint: {'y': 0.25}
        MDLabel:
            text: 'Gain access to complete quiz with N2000.'
            pos_hint: {'center_x': .5, 'center_y': .1}
            font_size: '15sp'
            halign: 'center'
            text_color: 60/255, 43/255, 117/255, 1
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {'center_x': .5, 'center_y': .49}
            canvas:
                Color:
                    rgb: (238/255, 235/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: name_input
                hint_text: 'Enter Your Code.'
                size_hint: 1, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: '2sp'
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_size: '18sp'
                password: True
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": 0.5, "right": 0.95}  # Adjust position as needed
                on_release: name_input.password = not name_input.password  # Toggle password visibility
        MDFillRoundFlatButton:
            text: "Enter"
            text_color: "white"
            font_size: '20sp'
            size_hint: .5, .08
            pos_hint: {'center_x': .5, 'center_y': .39}
            on_press: root.enter_button_pressed()
        MDFillRoundFlatButton:
            text: "Get Code Now!"
            text_color: "white"
            font_size: '18sp'
            size_hint: .5, .08
            pos_hint: {'center_x': .5, 'center_y': .27}
            on_press: root.show_get_code_popup()  # Add this line to trigger the popup
        MDFillRoundFlatButton:
            text: "Logout"
            text_color: "white"
            font_size: '18sp'
            size_hint: .5, .08
            pos_hint: {'center_x': .5, 'center_y': .18}
            on_press: root.manager.current = 'first'
