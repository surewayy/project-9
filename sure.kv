<FirstScreen>:
    name: 'first'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: '50.png'
            pos_hint: {'center_x': .5, 'center_y': .75}
        MDLabel:
            text: 'Common Entrance Quiz'
            pos_hint: {'center_x': .5, 'center_y': .45}
            font_size: '25sp'
            halign: 'center'
            text_color: 60/255, 43/255, 117/255, 1
        MDLabel:
            text: 'Powered by Sure Way Edutech.'
            pos_hint: {'center_x': .5, 'center_y': .05}
            font_size: '12sp'
            halign: 'center'
            text_color: 60/255, 43/255, 117/255, 1
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {'center_x': .5, 'center_y': .37}
            canvas:
                Color:
                    rgb: (238/255, 235/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: name_input
                hint_text: 'Please Enter Your Name.'
                size_hint: 1, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: '2sp'
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0, 0, 0, 0
                padding: 15
                font_size: '18sp'
        MDFillRoundFlatButton:
            text: "Enter"
            text_color: "white"
            font_size: '20sp'
            size_hint: .5, .08
            pos_hint: {'center_x': .5, 'center_y': .25}
            on_press: root.enter_button_pressed() if name_input.text else None

<SecondScreen>:
    name: 'second'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            id: welcome_label
            text: ''
            pos_hint: {'center_x': .5, 'center_y': .83}
            font_size: '18sp'
            halign: 'center'
            text_color: 60/255, 43/255, 117/255, 1

        MDFloatLayout:
            id: logos_container
    MDRaisedButton:
        text: "English Language"
        md_bg_color: "blue"
        pos_hint: {'center_x': .3, 'center_y': .66}
        on_release: root.start_quiz()

    MDRaisedButton:
        text: "Mathematics"
        md_bg_color: "blue"
        pos_hint: {'center_x': .75, 'center_y': .66}
        on_release: root.start_quiz2()

    MDRaisedButton:
        text: "Assess All Quiz"
        md_bg_color: "blue"
        pos_hint: {'center_x': .5, 'center_y': .1}
        on_release: root.assess_all_quiz()

<QuizScreen>:
    name: 'quiz'
    canvas.before:
        Color:
            rgba: (132/225, 183/225, 238/225, 1)  # Set the background color to white (1, 1, 1 represents white)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        Label:
            id: question_label
            font_size: '15sp'
            halign: 'center'
            color: 0, 0, 0, 1

        GridLayout:
            cols: 1
            spacing: dp(10)
            padding: dp(10)

            Button:
                id: option_1
                text: ''
                background_color: 1, 1, 1, 1  # Default color (white)
                on_press: root.check_answer(self)
            Button:
                id: option_2
                text: ''
                background_color: 1, 1, 1, 1  # Default color (white)
                on_press: root.check_answer(self)
            Button:
                id: option_3
                text: ''
                background_color: 1, 1, 1, 1  # Default color (white)
                on_press: root.check_answer(self)
            Button:
                id: option_4
                text: ''
                background_color: 1, 1, 1, 1  # Default color (white)
                on_press: root.check_answer(self)

        AnchorLayout:
            anchor_x: 'center'
            BoxLayout:
                size_hint_y: None
                height: dp(48)

                Widget:  # Spacer
                    size_hint_x: None
                    width: dp(10)

                MDRaisedButton:
                    text: "Next"
                    on_press: root.next_question()
<ResultScreen>:
    name: 'result_screen'
    MDLabel:
        id: result_label
        font_size: "30sp"
        halign: "center"
        pos_hint: {"center_y": 0.7}
    MDRaisedButton:
        text: "Try Again"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = "second"
    MDRaisedButton:
        text: "Correction"
        pos_hint: {"center_x": 0.5, "center_y": 0.1}
        on_release:
            root.manager.transition.direction = 'up'
            root.manager.current = "correction_screen1"
<CorrectionScreen1>:
    name: 'correction_screen1'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: correction_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(10)
        MDRaisedButton:
            text: "Return to Quiz Page"
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "second"

